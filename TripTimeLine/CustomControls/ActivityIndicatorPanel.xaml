<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TripTimeLine.CustomControls.ActivityIndicatorPanel">
    <ContentView.Content>
        <StackLayout IsVisible="{Binding IsBusy}" Padding="6" Orientation="Horizontal" BackgroundColor="{StaticResource PrimaryColor}">
            <ActivityIndicator Color="{StaticResource AccentColor}" IsRunning="true" VerticalOptions="Center" WidthRequest="20" HeightRequest="20" />
            <Label x:Name="title" TextColor="{StaticResource AccentColor}" Text="Loading..." VerticalOptions="Center" />
        </StackLayout>
    </ContentView.Content>
</ContentView>
